<div class="container">
    <p class="nancy"> <img src="pictures/icon.jpeg" width="25"></p>
    <p class="logout">LOGOUT</p>
    <!--<h1>GIPT-HEALTH* </h1>
    <img src="pictures/logo.jpeg" width="100"> -->
    <h4>PLEASE FILL IN DETAILS!</h4>
    <form action="/here" method="">
        <div class="names">
            <div>
                <label>Name</label>
                <input class="form-control" type"text" name="firstN" placeholder="enter firstname"
                    value="{{formBody.firstN}}">
            </div>
            <div>
                <label>Surname</label>
                <input class="form-control" type="text" name="lastN" placeholder="enter lastname"
                    value="{{formBody.lastN}}">
            </div>

        </div>
        <div>
            <label>ID Number</label>
            <input type="text" class="form-control" placeholder="Enter ID number" name="ID" value="{{formBody.ID}}">
        </div>
        <div>
            <div>
                <label>Tel</label>
                <input type="tel" class="form-control" name="telNo" value="{{formBody.telNo}}">
            </div>
            <div>
                <label>Email</label>
                <input type="email" class="form-control" name="email" value="{{formBody.email}}"
                    placeholder="enter email">
            </div>
        </div>
        <div>
            <h4> Address?</h4>


            <div class="form-group">
                <label for="inputAddress2">Address</label>
                <input type="text" class="form-control " id="inputAddress2"
                    placeholder="Enter house number and street name">
            </div>
            <div class="form-row align-items-center">
                <div class="form-group col-md-4">
                    <label for="inputCity">Surburb</label>
                    <input type="text" class="form-control" id="inputCity">
                </div>
                <div class="form-group col-auto col-md-4">
                    <label for="inputState">City</label>
                    <select id="inputState" class="form-control">
                        <option>Choose...</option>
                        <option>Johannesburg</option>
                    </select>
                </div>
                <div class="form-group col-auto col-md-2">
                    <label for="inputZip">Zip</label>
                    <input type="text" class="form-control" id="inputZip">
                </div>
            </div>

            <div class="form-group col-md-4">
                <label for="">Add Medical insurance</label>
                <br>
                <input class="form-control" type="text" name="medical" placeholder="Enter Insurance ID">
            </div>
        </div>
        <div>
            <div>
                <h4>Select Symptoms</h4>
                <input class="form-check-input" type="checkbox">
                <label>Coughing</label>

                <br>
                <input class="form-check-input" type="checkbox">
                <label>Sneezing</label>

                <br>
                <input class="form-check-input" type="checkbox">

                <label>Sore Throat</label>

                <br>
                <input class="form-check-input" type="checkbox">
                <label>Headache</label>
                <br>
                <input class="form-check-input" type="checkbox">
                <label>Backache</label>
                <br>
                <input class="form-check-input" type="checkbox">
                <label>Muscle Pain</label>
                <br>
                <input class="form-check-input" type="checkbox">
                <label>Diarrhea</label>

            </div>
            <div>
                <h4>Medical History</h4>
                <input class="form-check-input" type="checkbox">
                <label>Covid-19</label>

                <br>
                <input class="form-check-input" type="checkbox">
                <label>Diabetes</label>

                <br>
                <input class="form-check-input" type="checkbox">
                <label>High Blood</label>

                <br>
                <input class="form-check-input" type="checkbox">
                <label>Cancer</label>

                <br>
                <input class="form-check-input" type="checkbox">
                <label>Heart Desease</label>

                <br>
                <input class="form-check-input" type="checkbox">
                <label>Asthma</label>

                <br>
                <input class="form-check-input" type="checkbox">
                <label>Alzheimer's Disease</label>


            </div>
        </div>
        <div>
            <h4>Allergies?</h4>
            <input class="form-check-input" type="checkbox" value="yes">
            <label>YES</label>

            <input class="form-check-input" type="checkbox" value="No">
            <label>NO</label>
            <h4>If yes</h4>
            <label>Specify</label>
            <input class="form-control form-control-mb-6" type="text">


        </div>
        <br>
        <div><button class="btn btn-danger mb-6" type="submit" name="btn">Save</button></div>

    </form>

</div>