<div class="container">
    <div class=" form-group mx-sm-3 mb-2">

        <p>
        <h4>BOOK APPOINTMENT</h4>
        </p>

        <form class="form-inline" action="/appointment" method="POST">
            <label for="select department">Select Department</label>
            <div class="form-group ">
                <select class="form-control" name="select-department" id="department"
                    value="{{formBody.select-department}}" onchange="getSelectValue()" ;>
                    <option value="DENTAL">DENTAL</option>
                    <option value="PULMONARY">PULMONARY</option>
                    <option value="CARDIOLOGY">CARDIOLOGY</option>
                    <option value="OPHTALMOLOGY">OPHTALMOLOGY</option>
                    <option value="NEUROLOGY">NEUROLOGY</option>
                    <option value="TRAUMATOLOGY">TRAUMATOLOGY</option>
                    <option value="PEDIATRIC">PEDIATRIC</option>
                    <option value="DIAGNOSTICS">DIAGNOSTICS</option>
                </select>
            </div>

            <div>

                <div>
                    <label class="col-sm-2 col-form-label">Name</label>
                    <input type"text" name="first" placeholder="enter firstname" class="form-control"
                        value="{{formfirst}}" width="">
                </div>
                <div>
                    <label class="col-sm-2 col-form-label">Surname</label>
                    <input type="text" name="last" placeholder="enter lastname"
                        class=" input-group input-group form-control" value="{{formBody.last}}">
                </div>

            </div>
            <div>
                <label class="col-sm-2 col-form-label">ID Number</label>
                <input type="text" placeholder="Enter id number" pattern="^\d{13}$" name="id" minlength="13"
                    maxlength="13" class="form-control  d-inline input-group input-group" width=" 30%"
                    value="{{formBody.id}}" required="required">
            </div>
            <div>
                <div>
                    <label class="col-sm-2 col-form-label">Tel</label>
                    <input type="tel" name="telNo" pattern="^\d{10}$" class="form-control  d-inline"
                        value="{{formBody.telNo}}" required="reqired">
                </div>
                <div>
                    <label class="col-sm-2 col-form-label">Email</label>
                    <br>
                    <input type="email" name="email" class="form-control " value="{{formBody.email}}">
                </div>
            </div>
            <div>
                <h4>First time visit?</h4>
                <br>

                <input type="radio" name="yes" value="yes" class="form-check-input">
                <label class="form-check-label">Yes</label>
                <br>

                <input type="radio" name="yes" value="no" class="form-check-input">
                <label class="form-check-label">No</label>

            </div>

            <div>
                <label class="col-sm-2 col-form-label">Reason</label>
                <textarea type="text" placeholder="reason for visit..." name="reason"
                    class="form-control form-control-lg" value="{{formBody.reason}}"></textarea>
                <br>


            </div>



            <div>
                <h4>Allergies?</h4>
                <div>
                    <input type="radio" name="appointment" value="yes" class="form-check-input">
                    <label>Yes</label>

                    <br>
                    <input type="radio" name="appointment" value="yes" class="form-check-input">
                    <label>No</label>

                </div>

                <h4>If yes</h4>
                <label>Specify</label>
                <input class="form-control" type="text">

            </div>
            <br>
            <h4>Select Schedule suitable for you.</h4>
            <div>
                <label class="col-sm-2 col-form-label">Select Time</label>
                <input class="form-control" type="time" name="time" value="{{formBody.time}}">
            </div>
            <div>
                <label class="col-sm-2 col-form-label">Select Date</label>
                <input class="form-control" type="date" name="date" value="{{formBody.date}}">
            </div>


    </div>

</div>
<br>
<button class="btn btn-danger mb-2 form-control" name="SUBMIT APPOINTMENT" type="submit">SUBMIT APPOINTMENT</button>
</form>
<table>
    {{#each idnumbe}}
<div>
     {{appointments}}
        
</div>
{{/each}}
<div>
